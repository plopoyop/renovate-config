{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":configMigration",
    ":disableDependencyDashboard",
    ":disableRateLimiting",
    "docker:enableMajor",
    ":automergeDigest",
    ":enablePreCommit",
    "github>plopoyop/renovate-config:commit-message",
    "github>plopoyop/renovate-config:pr-labels",
    "github>plopoyop/renovate-config:semantic-commits"
  ],
  "timezone": "Europe/Paris",
  "dependencyDashboardTitle": ":robot: Renovate Dashboard",
  "suppressNotifications": ["prIgnoreNotification"],
  "commitBodyTable": true,
  "rebaseWhen": "auto",
  "platformCommit": "enabled"
}
